{
  "name": "prettier-eslint",
  "displayName": "Prettier ESLint",
  "description": "Format your code with Prettier and ESLint integration",
  "version": "1.0.0",
  "publisher": "dmitriy-ryazantsev",
  "engines": {
    "vscode": "^1.105.0"
  },
  "categories": [
    "Formatters"
  ],
  "activationEvents": [
    "onLanguage:javascript",
    "onLanguage:typescript",
    "onLanguage:javascriptreact",
    "onLanguage:typescriptreact",
    "onLanguage:json",
    "onLanguage:jsonc"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "prettier-eslint.format",
        "title": "Format Document with Prettier-ESLint"
      },
      {
        "command": "prettier-eslint.formatWorkspace",
        "title": "Format Workspace with Prettier-ESLint"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Prettier ESLint",
      "properties": {
        "prettier-eslint.enable": {
          "type": "boolean",
          "default": true,
          "description": "Enable/disable Prettier-ESLint formatting"
        },
        "prettier-eslint.formatOnSave": {
          "type": "boolean",
          "default": false,
          "description": "Format files on save"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "test": "jest",
    "lint": "eslint src"
  },
  "keywords": [
    "prettier",
    "eslint",
    "formatter",
    "javascript",
    "typescript"
  ],
  "author": "dmitriy-ryazantsev",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dmitriy-ryazantsev/prettier-eslint"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@jest/globals": "^30.2.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.24",
    "@types/vscode": "^1.105.0",
    "@vscode/vsce": "^3.7.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.5",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "eslint": "^9.39.1",
    "prettier": "^3.6.2"
  }
}
